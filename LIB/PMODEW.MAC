pm_split32 macro co32,regh,regl
#if #reg32(co32)
	push co32
	pop regl,regh
#elseif #mem32(co32)
	mov regl,co32
	mov regh,[co32+2]
#elseif #const32(co32)
	mov cx,co32 shr 16
	mov dx,co32 and (64k-1)
	#endif
	endm

pm_lin macro l
	pm_split32 l,cx,dx
	endm

